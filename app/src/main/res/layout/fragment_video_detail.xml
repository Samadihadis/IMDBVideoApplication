<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/videoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="from"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoName" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewFilmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDetail"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Film Name : "
        android:textSize="24sp"
        android:textStyle="italic"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/filmNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textViewFilmName"
        app:layout_constraintTop_toTopOf="@+id/textViewFilmName"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFilmName"
        android:layout_marginStart="16dp"
        android:text="from"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewFilmDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFilmName"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Film Description : "
        android:textSize="24sp"
        android:textStyle="italic"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/filmDescriptionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textViewFilmDescription"
        app:layout_constraintTop_toTopOf="@+id/textViewFilmDescription"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFilmDescription"
        android:layout_marginStart="16dp"
        android:text="from"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFilmDescription"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Film Author : "
        android:textSize="24sp"
        android:textStyle="italic"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/filmAuthorId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textViewAuthor"
        app:layout_constraintTop_toTopOf="@+id/textViewAuthor"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAuthor"
        android:layout_marginStart="16dp"
        android:text="Lindsay Dunn"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewFilmBuildYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAuthor"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Film Build Year : "
        android:textSize="24sp"
        android:textStyle="italic"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/filmBuildYearId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textViewFilmBuildYear"
        app:layout_constraintTop_toTopOf="@+id/textViewFilmBuildYear"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFilmBuildYear"
        android:layout_marginStart="16dp"
        android:text="February 20, 2022 "
        android:textSize="20sp"
        android:textStyle="bold"
        />


    <VideoView
        android:id="@+id/videoPlayer"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filmBuildYearId"
        android:layout_marginTop="20dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>