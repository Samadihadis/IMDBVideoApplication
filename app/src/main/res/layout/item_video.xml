<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemVideo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/videoImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="16dp"
        android:src="@drawable/icon_video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Title"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/videoImageView"
        app:layout_constraintTop_toTopOf="@+id/videoImageView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Description"
        android:maxLength="25"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/videoImageView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <ImageView
        android:id="@+id/isFavorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_fav_fill"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/arrowImageView"
        app:layout_constraintTop_toTopOf="@id/arrowImageView"
        app:layout_constraintBottom_toBottomOf="@+id/arrowImageView"/>

    <ImageView
        android:id="@+id/arrowImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icons_arrows_compact_small_right_regular"
        android:layout_marginEnd="16dp"
        app:tint="#838181"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>